@page
@model Lucaci_Ioana_ProiectFinal.Pages.Articles.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Article.Title" class="control-label"></label>
                <input asp-for="Article.Title" class="form-control" />
                <span asp-validation-for="Article.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.Description" class="control-label"></label>
                <input asp-for="Article.Description" class="form-control" />
                <span asp-validation-for="Article.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.Body" class="control-label"></label>
                <input asp-for="Article.Body" class="form-control" />
                <span asp-validation-for="Article.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.Author" class="control-label"></label>
                <select asp-for="Article.AuthorID" class="form-control"
                        asp-items="@Model.AuthorNames">
                    <option value="">Select Author</option>
                </select>
                <span asp-validation-for="Article.AuthorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Article.Category" class="control-label"></label>
                    <select asp-for="Article.CategoryID" class="form-control"
                            asp-items="@Model.CategoryNames">
                        <option value="">Select Category</option>
                    </select>
                    <span asp-validation-for="Article.CategoryID" class="text-danger"></span>
                </div>    
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
